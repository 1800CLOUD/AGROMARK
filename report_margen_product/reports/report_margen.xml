<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_margen_product_line_search" model="ir.ui.view">
        <field name="name">report.margen.product.line.search</field>
        <field name="model">report.margen.product.line</field>
        <field name="arch" type="xml">
            <search string="Margen de producto">
                <field name="product_id"
                       filter_domain="['|', ('product_id.default_code', 'ilike', self),('product_id', 'ilike', self)]"/>
                <field name="product_brand_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_product_id" string="Producto" context="{'group_by':'product_id'}"/>
                    <separator/>
                    <filter name="group_brand_id" string="Marca" context="{'group_by':'product_brand_id'}"/>
                </group>
            </search>
        </field>
    </record>
        
        <record id="report_invoice_form" model="ir.ui.view">
            <field name="name">report.margen.form</field>
            <field name="model">report.margen.product</field>
            <field name="arch" type="xml">
                <form string="Informe de Margen de producto">
                    <sheet>
                        <div class="oe_button_box">                        
                            <button name="get_xlsx_report" string="Excel" type="object" class="oe_highlight" icon="fa-file-excel-o" />
                            <button name="analysis" type="object" class="oe_stat_button" icon="fa-sort-amount-asc" string="Analisis"/>
                        </div>
                        <h1>
                            <strong>Informe de Margen de Producto</strong>
                        </h1>
                        <group col="2" string="Fechas de Corte">
                            <group colspan="1">
                                <field name="date_from"/>
                            </group>
                            <group colspan="1">
                                <field name="date_to"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="brand_ids" widget="many2many_tags"/>
                                <field name="xls_filename" invisible="1"/>
                            </group>
                            <div>
                                <p attrs="{'invisible': [('xls_file', '=', False)]}" class="oe_inline" name="xls_file">
                                    Download the XLSX details file: <field name="xls_file" readonly="1" filename="xls_filename"/>
                                </p>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="report_margen_product_line_tree" model="ir.ui.view">
            <field name="name">report.margen.product.line.tree</field>
            <field name="model">report.margen.product.line</field>
            <field name="arch" type="xml">
                <tree string="Margen de producto">
                    <field name="product_id"/>
                    <field name="product_brand_id"/>
                    <field name="income"/>
                    <field name="cost"/>
                    <field name="utility"/>
                    <field name="cost_effectiveness"/>
                    <field name="margin_utility"/>
                </tree>
            </field>
        </record>

        <record id="view_margen_report_pivot" model="ir.ui.view">
                 <field name="name">margen.report.pivot</field>
                 <field name="model">report.margen.product.line</field>
                 <field name="arch" type="xml">
                    <pivot string="Invoices Analysis" sample="1">
                       <field name="product_id" type="row"/>
                       <field name="income" type="measure"/>
                       <field name="cost" type="measure"/>
                       <field name="utility" type="measure"/>
                    </pivot>
                 </field>
        </record>

        <record id="action_report_margen" model="ir.actions.act_window">
            <field name="name">Informe de Margen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.margen.product</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>   

    </data>
</odoo>

