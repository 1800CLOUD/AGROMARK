<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="quant_hstory_wizard_view" model="ir.ui.view">
            <field name="name">stock.quant.wizard.view</field>
            <field name="model">stock.quantity.history</field>
            <field name="inherit_id" ref="stock.view_stock_quantity_history" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='inventory_datetime']" position="replace">
                    <group col="2" string="Fechas de Corte">
                        <group colspan="1">
                            <field name="inventory_datetime"/>
                        </group>
                        <group colspan="1">
                            <field name="inventory_to"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>